 

 <% layout("/layouts/boilerplate.ejs")-%>


 <div class="row mt-3">
    <h2 class="col-6 offset-3">Sign up to airnbnb</h2>
    <div class="col-6 offset-3">
        <form method="post" action="/signup"  novalidate  class="needs-validation" > 
            <div class="mb-3">
                <label for="username" class="form-label">username</label>
                <input type="text"  class="form-control" placeholder=" Enter  your  username" name="username" required>
                <div class="valid-feedback">Nice username</div>
                <div class="invalid-feedback">Enter a valid title</div>
              </div>
       

      
            <div class="mb-3">
                <label for="email" class="form-label">Email</label>
                <input type="email"  class="form-control" placeholder=" Enter  your  email" name="email" required>
              </div>
      
      
            <div class="mb-3">
                <label for="password" class="form-label">password</label>
                <input type="password"  class="form-control" placeholder=" Enter  your  password" name="password" required>
              </div>
              <button class="btn btn-dark ">SignUp</button>
        </form>
    </div>
 </div>


 

 